#Week 4 Assignment - Magic 8 ball

#Allow user to input question
question = "will it rain tomorrow?"

print (question)

#Generate random number
import random

print(random.randint(1,8))

def even_fortune(number, even):
    print(f"{number} {even}")

even_fortune("2","doubtful")
even_fortune("4","no chance")
even_fortune("6","unlikely")
even_fortune("8","no way")

def odd_fortune(number,odd):
    print(f"{number} {odd}")

odd_fortune("1","afraid so")
odd_fortune("3","you bet")
odd_fortune("5","likely")
odd_fortune("7","for sure")

#Use random method to pick random fortune
import random

random.seed(0)

print(random.randint(1,8))








